---
import { type CollectionEntry, getCollection } from 'astro:content'
import Layout from '@layouts/Layout.astro'
import Container from '@components/Container.astro'
import FormattedDate from '@components/FormattedDate.astro'
import { readingTime } from '@lib/utils'
import BackToPrevious from '@components/BackToPrevious.astro'
import Link from '@components/Link.astro'
import TableOfContents from '@components/TableOfContents.astro'
import Giscus from '@components/Giscus.astro'
import Signature from '@components/Signature.astro'
import ExternalLinkIcon from '@components/ExternalLinkIcon.astro'
import GitHubIcon from '@components/GitHubIcon.astro'

export async function getStaticPaths() {
  const projects = (await getCollection('projects'))
    .filter((post) => !post.data.draft)
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: project,
  }))
}
type Props = CollectionEntry<'projects'>

const project = Astro.props
const { Content, headings } = await project.render()
---

<Layout
  title={project.data.title}
  description={project.data.description}
>
  <TableOfContents
    headings={headings}
    slot={headings.length > 0 ? 'aside' : ''}
  />
  <Container>
    <div class="animate">
      <BackToPrevious href="/projects">Back to projects</BackToPrevious>
    </div>
    <div class="animate my-10 space-y-1">
      <div class="flex items-center gap-1.5">
        <div class="font-base text-sm">
          <FormattedDate date={project.data.date} />
        </div>
        &bull;
        <div class="font-base text-sm">
          {readingTime(project.body)}
        </div>
      </div>
      <h1 class="text-3xl font-semibold text-black dark:text-white">
        {project.data.title}
      </h1>
      {
        (project.data.demoURL ||
          project.data.repoURL ||
          project.data.websiteURL) && (
          <nav class="flex gap-2 pt-1">
            {project.data.demoURL && (
              <Link
                className="inline-flex items-center gap-1 text-nowrap"
                href={project.data.demoURL}
                external
              >
                <ExternalLinkIcon />
                demo
              </Link>
            )}
            {project.data.repoURL && (
              <Link
                className="inline-flex items-center gap-1 text-nowrap"
                href={project.data.repoURL}
                external
              >
                <GitHubIcon />
                repo
              </Link>
            )}
            {project.data.websiteURL && (
              <Link
                className="inline-flex items-center gap-1 text-nowrap"
                href={project.data.websiteURL}
                external
              >
                <ExternalLinkIcon />
                website
              </Link>
            )}
          </nav>
        )
      }
    </div>
    <article class="animate">
      <Content />
      <Signature class="mt-12 text-right text-xl font-extralight" />
      <div class="mt-12">
        <Giscus />
      </div>
    </article>
  </Container>
</Layout>
