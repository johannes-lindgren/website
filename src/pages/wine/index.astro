---
import { getCollection } from 'astro:content'
import Layout from '@layouts/Layout.astro'
import Container from '@components/Container.astro'
import ArrowIcon from '@components/ArrowIcon.astro'
import { WINE } from '@consts.ts'

const allWine = (await getCollection('wine'))
  .filter((entry) => !entry.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())

// Group articles by base slug to detect translations
const articleGroups = new Map()

allWine.forEach((entry) => {
  // Get base slug (without language suffix)
  const baseSlug = entry.id
    .replace(/\/index\.([a-z]{2})\.mdx?$/, '')
    .replace(/\/index\.mdx?$/, '')

  if (!articleGroups.has(baseSlug)) {
    articleGroups.set(baseSlug, {
      english: null,
      translations: [],
    })
  }

  const group = articleGroups.get(baseSlug)

  if (entry.id.includes('.sv.')) {
    group.translations.push({ lang: 'sv', label: 'sv', entry })
  } else {
    group.english = entry
  }
})

// Get only English articles with their translation info
const wineWithTranslations = Array.from(articleGroups.values())
  .filter((group) => group.english !== null)
  .map((group) => ({
    entry: group.english,
    translations: group.translations,
  }))
  .sort((a, b) => b.entry.data.date.valueOf() - a.entry.data.date.valueOf())
---

<Layout
  title={WINE.TITLE}
  description={WINE.DESCRIPTION}
>
  <Container>
    <aside data-pagefind-ignore>
      <div class="space-y-10">
        <h1 class="animate font-semibold text-black dark:text-white">Wine</h1>
        <p>Here are some wine-related things.</p>
        <div class="not-prose animate">
          <a
            href="https://www.vivino.com/users/johannes.lindgren1"
            target="_blank"
            rel="noopener noreferrer"
            class="group flex items-center gap-4 rounded-lg border-2 border-[#7B1E3A] bg-[#7B1E3A] px-6 py-4 shadow-md transition-all duration-200 hover:scale-[1.03] hover:shadow-lg focus-visible:scale-[1.03] focus-visible:shadow-lg"
            style="color:#fff;"
          >
            <img
              src="/src/pages/wine/vivino-logo.png"
              alt="Vivino logo"
              class="h-12 w-12 border border-[#fff] bg-[#7B1E3A] shadow"
              loading="lazy"
              style="object-fit: contain;"
            />
            <div class="flex flex-col justify-center">
              <span
                class="text-lg font-bold"
                style="color:#fff;"
                >Vivino Profile</span
              >
              <span
                class="text-sm font-medium"
                style="color:#fff;"
                >See my wine reviews</span
              >
            </div>
            <ArrowIcon class="ml-auto size-5 fill-none stroke-white stroke-2" />
          </a>
        </div>
        <hr
          class="my-6 border-t-2 border-gray-300 opacity-40 dark:border-gray-700"
        />
        <ul class="animate not-prose flex flex-col gap-4">
          {
            wineWithTranslations.map(({ entry, translations }) => {
              const slug = entry.id
                .replace(/\/index\.([a-z]{2})\.mdx?$/, '/$1')
                .replace(/\/index\.mdx?$/, '')

              return (
                <li class="relative">
                  <a
                    href={`/wine/${slug}`}
                    class="not-prose group relative flex flex-nowrap rounded-lg border border-black/15 px-4 py-3 pr-10 transition-colors duration-300 ease-in-out hover:bg-black/5 hover:text-black focus-visible:bg-black/5 focus-visible:text-black dark:border-white/20 dark:hover:bg-white/5 dark:hover:text-white dark:focus-visible:bg-white/5 dark:focus-visible:text-white"
                  >
                    <div class="flex flex-1 flex-col truncate">
                      <div class="flex flex-wrap items-center justify-between gap-2">
                        <div class="font-semibold">{entry.data.title}</div>
                        <div>
                          {translations.length > 0 && (
                            <div class="flex items-center gap-1.5 text-xs">
                              <span class="text-black/50 dark:text-white/50">
                                Also in:
                              </span>
                              {translations.map((t) => (
                                <span class="rounded bg-black/10 px-2 py-0.5 font-medium text-black/70 dark:bg-white/10 dark:text-white/70">
                                  {t.label}
                                </span>
                              ))}
                            </div>
                          )}
                        </div>
                      </div>
                      <div class="text-sm">{entry.data.description}</div>
                    </div>
                    <ArrowIcon class="absolute right-2 top-1/2 size-5 -translate-y-1/2 fill-none stroke-current stroke-2" />
                  </a>
                </li>
              )
            })
          }
        </ul>
      </div>
    </aside>
  </Container>
</Layout>
