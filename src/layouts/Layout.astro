---
import Head from "@components/Head.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import PageFind from "@components/PageFind.astro";
import { SITE } from "@consts";
import Aside from "../components/Aside.astro";

type Props = {
  title: string;
  description: string;
};

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <Head title={`${title} | ${SITE.TITLE}`} description={description} />
  </head>
  <body>
    <Header />
    <main class="p-0">
      <div class="container">
        <div class="mt-20 w-full">
          <div
            class="mx-auto flex max-w-2xl flex-col gap-6 lg:grid lg:max-w-none lg:grid-cols-12"
          >
            {
              Astro.slots.aside && (
                <div class="hidden lg:col-span-3 lg:block">
                  <div class="sticky bottom-0 top-20 self-start">
                    <div class="h-[calc(100vh-4rem)] border-r">
                      <h4 class="px-3 py-4">Table of Contents</h4>
                      <div class="h-full overflow-y-auto px-3 py-4 pb-24 dark:bg-gray-800">
                        <slot name="aside" />
                      </div>
                    </div>
                  </div>
                </div>
              )
            }
            <!-- Main Content -->
            <div
              class="text-base-content text-base lg:col-span-7 lg:col-start-5"
            >
              <slot />
              <Footer />
            </div>
          </div>
        </div>
      </div>
    </main>
    <PageFind />
  </body>
</html>
